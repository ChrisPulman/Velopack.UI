<UserControl
    x:Class="Velopack.UI.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
    xmlns:local="clr-namespace:Velopack.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui"
    xmlns:vtv="clr-namespace:Velopack.UI.MultiSelectTreeView.Controls"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    x:Name="mainView"
    Width="1024"
    Height="910"
    MinWidth="525"
    MinHeight="400"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    mc:Ignorable="d">

    <xctk:BusyIndicator
        x:Name="ShellBusyIndicator"
        DisplayAfter="0"
        IsBusy="{Binding Path=IsBusy}">
        <xctk:BusyIndicator.BusyContentTemplate>
            <DataTemplate>
                <!--  Ensure the Busy overlay binds to the window's DataContext (MainViewModel)  -->
                <ui:StackPanel
                    Width="250"
                    Margin="4"
                    DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type xctk:BusyIndicator}}}">
                    <ui:TextBlock
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="PACKAGE CREATION" />
                    <ui:StackPanel Margin="4" HorizontalAlignment="Stretch">
                        <ui:TextBlock FontSize="12" Text="{Binding CurrentPackageCreationStage}" />
                        <ProgressBar
                            Height="25"
                            Margin="5"
                            IsIndeterminate="True" />
                    </ui:StackPanel>
                    <ui:Button
                        Grid.Column="1"
                        Margin="2,0,0,0"
                        HorizontalAlignment="Center"
                        Command="{Binding AbortPackageCreationCmd}"
                        Content="Cancel" />
                </ui:StackPanel>
            </DataTemplate>
        </xctk:BusyIndicator.BusyContentTemplate>
        <xctk:BusyIndicator.ProgressBarStyle>
            <Style TargetType="ProgressBar">
                <Setter Property="Visibility" Value="Collapsed" />
            </Style>
        </xctk:BusyIndicator.ProgressBarStyle>

        <ui:Grid>
            <ui:Grid.Resources>
                <Style x:Key="ListViewHideHeader" TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>

                <Style x:Key="Label" TargetType="{x:Type ui:TextBlock}">
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Foreground" Value="#555" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Margin" Value="4" />
                </Style>
            </ui:Grid.Resources>
            <ui:Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </ui:Grid.RowDefinitions>
            <ui:Grid
                x:Name="MainGrid"
                Grid.Row="2"
                DataContext="{Binding Model}">
                <ui:Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="320" />
                    <ColumnDefinition Width="7" />
                    <ColumnDefinition Width="*" MinWidth="300" />
                </ui:Grid.ColumnDefinitions>
                <ui:Grid.RowDefinitions>
                    <RowDefinition Height="509*" />
                    <RowDefinition Height="204*" />
                    <RowDefinition Height="60" />
                </ui:Grid.RowDefinitions>
                <ui:GroupBox Grid.RowSpan="2" Margin="5,5,5,4.5">
                    <ui:GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:TextBlock FontSize="14" Text="PACKAGE DETAILS" />
                        </StackPanel>
                    </ui:GroupBox.Header>
                    <ui:Grid>
                        <ui:Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="4" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </ui:Grid.RowDefinitions>
                        <Menu
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,12"
                            DataContext="{Binding ElementName=mainView, Path=DataContext}"
                            FontSize="16">
                            <MenuItem Width="200" Header="Project">
                                <MenuItem.Icon>
                                    <Image Source="/Velopack.UI;component/Images/folder_24.png" Stretch="UniformToFill" />
                                </MenuItem.Icon>
                                <MenuItem Command="{Binding CreateNewProjectCommand}" Header="Create New" />
                                <MenuItem Command="{Binding OpenProjectCommand}" Header="Open" />
                                <MenuItem Command="{Binding SaveCommand}" Header="Save" />
                                <MenuItem Command="{Binding SaveAsCommand}" Header="Save As" />
                            </MenuItem>
                        </Menu>

                        <ui:TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource ResourceKey=Label}"
                            Text="APP ID" />
                        <ui:TextBox
                            Grid.Row="2"
                            Grid.Column="0"
                            Background="{x:Null}"
                            Text="{Binding AppId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                        <ui:TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Style="{StaticResource ResourceKey=Label}"
                            Text="VERSION" />
                        <ui:TextBox
                            Grid.Row="5"
                            Grid.Column="0"
                            Background="{x:Null}"
                            IsEnabled="{Binding ElementName=cbManualVersion, Path=IsChecked}"
                            Text="{Binding Version, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox
                            x:Name="cbManualVersion"
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="4"
                            Content="Set Version Manually"
                            IsChecked="{Binding SetVersionManually}" />

                        <ui:TextBlock
                            Grid.Row="8"
                            Grid.Column="0"
                            Style="{StaticResource ResourceKey=Label}"
                            Text="TITLE" />
                        <ui:TextBox
                            Grid.Row="9"
                            Grid.Column="0"
                            Background="{x:Null}"
                            Text="{Binding Title, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                        <ui:TextBlock
                            Grid.Row="11"
                            Grid.Column="0"
                            Style="{StaticResource ResourceKey=Label}"
                            Text="DESCRIPTION" />
                        <ui:TextBox
                            Grid.Row="12"
                            Grid.Column="0"
                            Height="50"
                            AcceptsReturn="True"
                            Background="{x:Null}"
                            Text="{Binding Description, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                        <ui:TextBlock
                            Grid.Row="14"
                            Grid.Column="0"
                            Style="{StaticResource ResourceKey=Label}"
                            Text="AUTHORS" />
                        <ui:TextBox
                            Grid.Row="15"
                            Grid.Column="0"
                            Background="{x:Null}"
                            Text="{Binding Authors, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                        <ui:TextBlock
                            Grid.Row="17"
                            Grid.Column="0"
                            Style="{StaticResource ResourceKey=Label}"
                            Text="UPLOAD LOCATION" />
                        <ui:StackPanel
                            Grid.Row="18"
                            Grid.Column="0"
                            Orientation="Horizontal">
                            <ComboBox
                                Background="{x:Null}"
                                ItemsSource="{Binding AvailableUploadLocation}"
                                SelectedItem="{Binding SelectedConnectionString, ValidatesOnDataErrors=True}" />
                            <ui:Image
                                Width="16"
                                Height="16"
                                Margin="4,0"
                                Source="/Velopack.UI;component/Images/edit_16.png" />
                            <ui:Button
                                Margin="4"
                                Command="{Binding EditCurrentConnectionCommand}"
                                Content="Edit Connection"
                                FontSize="16" />
                        </ui:StackPanel>

                        <ui:GroupBox Grid.Row="21" Header="Velopack Options">
                            <ui:Grid Margin="4">
                                <ui:Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </ui:Grid.ColumnDefinitions>
                                <ui:Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </ui:Grid.RowDefinitions>
                                <CheckBox
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="4"
                                    Content="Generate Delta Packages"
                                    IsChecked="{Binding GenerateDeltaPackages}" />
                                <ui:StackPanel
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="4"
                                    Orientation="Horizontal">
                                    <CheckBox Content="Generate MSI" IsChecked="{Binding GenerateMsi}" />
                                    <ui:TextBlock
                                        Margin="12,0,4,0"
                                        VerticalAlignment="Center"
                                        Text=" Bitness:" />
                                    <ui:ComboBox Width="80" SelectedItem="{Binding MsiBitness}">
                                        <sys:String>x86</sys:String>
                                        <sys:String>x64</sys:String>
                                    </ui:ComboBox>
                                </ui:StackPanel>
                                <ui:StackPanel
                                    Grid.Row="2"
                                    Grid.ColumnSpan="2"
                                    Margin="4"
                                    Orientation="Horizontal">
                                    <ui:TextBlock
                                        Width="100"
                                        VerticalAlignment="Center"
                                        Text="Sign Params:" />
                                    <ui:TextBox MinWidth="280" Text="{Binding SignParams}" />
                                </ui:StackPanel>
                                <ui:StackPanel
                                    Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    Margin="4"
                                    Orientation="Horizontal">
                                    <ui:TextBlock
                                        Width="100"
                                        VerticalAlignment="Center"
                                        Text="Sign Template:" />
                                    <ui:TextBox MinWidth="280" Text="{Binding SignTemplate}" />
                                </ui:StackPanel>
                                <ui:StackPanel
                                    Grid.Row="4"
                                    Grid.ColumnSpan="2"
                                    Margin="4"
                                    Orientation="Horizontal">
                                    <ui:Button
                                        Margin="0,0,8,0"
                                        Command="{Binding AddFolderFromDialogCommand}"
                                        Content="Select Content Folder" />
                                    <ui:Button Command="{Binding AddFilesFromDialogCommand}" Content="Select Content Files" />
                                </ui:StackPanel>
                            </ui:Grid>
                        </ui:GroupBox>

                        <ui:Grid Grid.Row="23">
                            <ui:Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </ui:Grid.ColumnDefinitions>
                            <ui:StackPanel
                                Grid.Column="0"
                                Margin="4"
                                Orientation="Vertical">
                                <ui:Button
                                    HorizontalAlignment="Center"
                                    Command="{Binding SelectIconCommand}"
                                    Content="APP ICON"
                                    FontSize="14"
                                    FontWeight="Bold" />
                                <ui:Border
                                    Margin="2"
                                    Padding="3"
                                    HorizontalAlignment="Center"
                                    BorderThickness="1">
                                    <ui:Image
                                        Width="32"
                                        Height="32"
                                        Margin="3"
                                        Source="{Binding IconSource}" />
                                </ui:Border>
                            </ui:StackPanel>
                            <ui:StackPanel
                                Grid.Column="1"
                                Margin="4"
                                Orientation="Vertical">
                                <ui:Button
                                    HorizontalAlignment="Center"
                                    Command="{Binding SelectSplashCmd}"
                                    Content="SPLASH"
                                    FontSize="14"
                                    FontWeight="Bold" />
                                <ui:Border
                                    Margin="2"
                                    Padding="3"
                                    HorizontalAlignment="Center"
                                    BorderThickness="1">
                                    <ui:Image
                                        Width="32"
                                        Height="32"
                                        Margin="3"
                                        Source="{Binding Path=SplashSource}" />
                                </ui:Border>
                            </ui:StackPanel>
                        </ui:Grid>

                        <ui:StackPanel
                            Grid.Row="25"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,8,0"
                                Command="{Binding SelectNupkgDirectoryCommand}"
                                Content="Output: Content Folder" />
                            <ui:TextBlock VerticalAlignment="Center" Text="{Binding NupkgOutputPath}" />
                        </ui:StackPanel>
                        <ui:StackPanel
                            Grid.Row="26"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,8,0"
                                Command="{Binding SelectOutputDirectoryCommand}"
                                Content="Output: Releases Folder" />
                            <ui:TextBlock VerticalAlignment="Center" Text="{Binding SquirrelOutputPath}" />
                        </ui:StackPanel>
                    </ui:Grid>
                </ui:GroupBox>
                <GridSplitter
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Width="2"
                    Margin="2,40,3,40.5"
                    HorizontalAlignment="Center"
                    IsTabStop="False" />
                <GroupBox Grid.Column="2" Margin="5,5,5,4.5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:TextBlock FontSize="14" Text="INSTALLER PACKAGE CONTENT" />
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <vtv:MultiSelectTreeViewControl
                            x:Name="PackageTreeview"
                            dd:DragDrop.DropHandler="{Binding}"
                            dd:DragDrop.IsDragSource="True"
                            dd:DragDrop.IsDropTarget="True"
                            dd:DragDrop.UseDefaultDragAdorner="True"
                            AllowDrop="True"
                            ItemsSource="{Binding PackageFiles}"
                            SelectedItems="{Binding SelectedLink}" />
                        <ui:Border
                            Grid.Row="1"
                            Padding="4"
                            BorderBrush="#999"
                            BorderThickness="1,0,1,1"
                            SnapsToDevicePixels="True">
                            <ui:Grid
                                x:Name="DetailGrid"
                                DataContext="{Binding SelectedItem}"
                                TextElement.FontSize="14"
                                TextElement.Foreground="#607D8B">
                                <ui:Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.Model.SelectedItem, ElementName=mainView}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Hidden" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:Grid.Style>
                                <ui:Grid>
                                    <ui:Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </ui:Grid.ColumnDefinitions>
                                    <ui:Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </ui:Grid.RowDefinitions>

                                    <ui:TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="8,0"
                                        Text="Source Filepath" />
                                    <ui:TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Margin="4,0"
                                        Text="{Binding DataContext.Model.SquirrelOutputPath, ElementName=mainView}"
                                        TextWrapping="Wrap" />

                                    <ui:TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="8,0"
                                        Text="File Dimension" />
                                    <ui:TextBlock
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="4,0"
                                        Text="{Binding FileDimension}"
                                        TextWrapping="Wrap" />

                                    <ui:TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="8,0"
                                        Text="Last Edit " />
                                    <ui:TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Margin="4,0"
                                        Text="{Binding LastEdit}"
                                        TextWrapping="Wrap" />

                                    <ui:Image
                                        Grid.Row="0"
                                        Grid.RowSpan="3"
                                        Grid.Column="0"
                                        Width="24"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        Source="{Binding FileIcon}" />
                                </ui:Grid>
                            </ui:Grid>
                        </ui:Border>
                    </Grid>
                </GroupBox>

                <GroupBox
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5,5.5,5,4.5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <ui:TextBlock FontSize="14" Text="UPLOAD QUEUE" />
                        </StackPanel>
                    </GroupBox.Header>
                    <ListView
                        Grid.Row="1"
                        Background="{x:Null}"
                        ItemsSource="{Binding Path=UploadQueue}"
                        SelectedItem="{Binding Path=SelectedUploadItem}">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn
                                        Width="170"
                                        DisplayMemberBinding="{Binding Path=Filename}"
                                        Header="Filename" />
                                    <GridViewColumn
                                        Width="220"
                                        DisplayMemberBinding="{Binding Path=DestinationPath}"
                                        Header="Destination" />
                                    <GridViewColumn
                                        Width="150"
                                        DisplayMemberBinding="{Binding Path=ConnectionName}"
                                        Header="Location" />
                                    <GridViewColumn
                                        Width="120"
                                        DisplayMemberBinding="{Binding Path=FormattedStatus}"
                                        Header="Status" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Path=FileSize}"
                                        Header="Size" />
                                    <GridViewColumn Width="150" Header="Upload %">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <ProgressBar
                                                    Maximum="100"
                                                    Minimum="0"
                                                    Value="{Binding Path=ProgressPercentage}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>

                <ui:Grid
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Margin="0,1.5,0,0.5">
                    <ui:Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </ui:Grid.ColumnDefinitions>

                    <ui:Button
                        x:Name="PublishPackageOnlyUpdate"
                        Width="320"
                        Margin="5"
                        Padding="0"
                        HorizontalAlignment="Center"
                        Command="{Binding ElementName=mainView, Path=DataContext.PublishPackageOnlyUpdateCommand}"
                        Cursor="Hand">
                        <ui:StackPanel Orientation="Horizontal">
                            <ui:Image
                                Width="32"
                                Height="32"
                                Margin="5,0"
                                Source="/Velopack.UI;component/Images/upload_32.png" />
                            <ui:TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="Green"
                                Text="Publish Only Update Files" />
                        </ui:StackPanel>
                    </ui:Button>

                    <ui:Button
                        x:Name="PublishPackageComplete"
                        Grid.Column="1"
                        Width="320"
                        Margin="5"
                        Padding="0"
                        HorizontalAlignment="Center"
                        Command="{Binding ElementName=mainView, Path=DataContext.PublishPackageCompleteCommand}"
                        Cursor="Hand">
                        <ui:StackPanel Orientation="Horizontal">
                            <ui:Image
                                Width="32"
                                Height="32"
                                Margin="5,0"
                                Source="/Velopack.UI;component/Images/upload_32.png" />
                            <ui:TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="Green"
                                Text="Publish Complete Setup" />
                        </ui:StackPanel>
                    </ui:Button>
                </ui:Grid>
            </ui:Grid>
        </ui:Grid>
    </xctk:BusyIndicator>
</UserControl>
