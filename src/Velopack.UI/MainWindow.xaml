<ui:FluentNavigationWindow
    x:Class="Velopack.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Velopack.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="https://github.com/reactivemarbles/CrissCross.ui"
    x:Name="mainWindow"
    Title="Velopack UI"
    Width="1024"
    Height="965"
    MinWidth="1024"
    MinHeight="965"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    x:TypeArguments="local:MainWindowViewModel"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Icon="/Images/Application.png"
    TitleIcon="/Images/Application.png"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    mc:Ignorable="d" />
